component provides StringStringFunction {

	char[] StringStringFunction:function(char str[])
	{
    int i
    int strLength
    int decrement
    int zero
    bool condition
    char reverse[]
    strLength = str.arrayLength
    decrement = 1
    zero = strLength - strLength
    i = strLength - decrement
    condition = i >= zero
    while (condition)
    {
      reverse = new char[](reverse, str[i])
      i = i - decrement
    }
    return reverse
	}
}
